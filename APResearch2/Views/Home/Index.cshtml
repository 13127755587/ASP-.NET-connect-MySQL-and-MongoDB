@model IEnumerable<APResearch2.Models.Customer>

@{
    ViewBag.Title = "Home Page";
}

<div>
    <h3>Customers List</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>first_name</th>
                <th>last_name</th>
                <th>e_mail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.customer_1.first_name
                    </td>
                    <td>
                        @item.customer_1.last_name
                    </td>
                    <td>
                        @item.customer_1.e_mail
                    </td>
                </tr>
                <tr>
                    <td>
                        @item.customer_2.first_name
                    </td>
                    <td>
                        @item.customer_2.last_name
                    </td>
                    <td>
                        @item.customer_2.e_mail
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>